<container id='material_%{id}' ondoubleclick="change_material(%{id})" size='0,40' color='#00000040' hover-color='#00000080' tooltip="%{tooltip}"> 
    <label id="materialname_%{id}" pos='39,6'>%{name}</label> 

    <label id="materialcount_%{id}" pos='39,6' size='455,50' color='#FFFFFFB2'> 
        %{count} 
    </label> 

    <image id="materialicon_%{id}" pos='3,3' src='%{icon}' size='34'/>
    <textbox id='materialitem_%{id}' consumer="material_edit" error-color="#a00000b8" validator="%{validator}" size='615,40' pos="0,0" visible="false" />
</container>